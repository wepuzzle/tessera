{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "inputs": ["src/**/*.test.ts", "test/**"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "inputs": ["src/**/*.test.ts", "test/**"],
      "cache": false,
      "persistent": true
    },
    "//#lint": {},
    "//#lint:fix": {
      "cache": false
    }
  }
}
