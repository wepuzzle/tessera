{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext"],
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false
  }
}
